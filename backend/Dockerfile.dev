FROM python:3.13.5-slim-bookworm

WORKDIR /app
COPY . /app

# System deps required by Playwright/Chromium
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    ca-certificates \
    fonts-liberation \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libcups2 \
    libdbus-1-3 \
    libdrm2 \
    libgbm1 \
    libglib2.0-0 \
    libnss3 \
    libnspr4 \
    libx11-6 \
    libx11-xcb1 \
    libxcb1 \
    libxcomposite1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxrandr2 \
    libxrender1 \
    libxshmfence1 \
    libxss1 \
    libxtst6 \
    libpango-1.0-0 \
    libpangocairo-1.0-0 \
    libgtk-3-0 \
    && rm -rf /var/lib/apt/lists/*

RUN pip install -r requirements.txt
RUN pip install playwright

# âœ… Install browsers to a shared location in the image
ENV PLAYWRIGHT_BROWSERS_PATH=/ms-playwright
RUN playwright install chromium

ENV PYTHONDONTWRITEBYTECODE=1
ENV DPORT_BACKEND_CONTAINER=8000

RUN useradd -u 1000 -m appuser
USER 1000:1000

CMD uvicorn main:app --reload --port=${DPORT_BACKEND_CONTAINER} --host=0.0.0.0